	System.out.println("Enter goal");
	goal=sc1.nextInt();
	System.out.println("Enter number of times");
	nmbrftms=sc1.nextInt();
	int wncnt=0,btcnt=0;
	while(stake!=0 || winnings!=goal)
	{
		if(Math.random()>0.5)
		{
			winnings++;
			
		}
	}
	}
}
